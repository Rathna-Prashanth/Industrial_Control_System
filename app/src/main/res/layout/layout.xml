<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">


    <Button
        android:id="@+id/btn1"
        android:layout_width="190dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#FF0000"
        android:text="MAIN" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="190dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="#FF0000"

        android:text="CONTROL HEAD" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn1"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="49dp"
        android:background="#0000FF"
        android:text="SHAFT I" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/btn3"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:background="#0000FF"
        android:text="SHAFT II" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/btn1"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/btn1"
        android:layout_marginBottom="79dp"
        android:background="#FFFF00"
        android:text="BULB I" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/btn5"
        android:layout_alignBottom="@+id/btn5"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:background="#FFFF00"
        android:text="BULB II" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_above="@+id/btn6"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp"
        android:background="#00FF00"
        android:text="LINE HEAD" />

</RelativeLayout>
